{
  "name": "izerwaren-frontend-hotfix",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "lint:fix": "next lint --fix",
    "type-check": "tsc --noEmit",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "test": "playwright test",
    "test:smoke": "playwright test --project=smoke-tests-chromium",
    "test:smoke:basic": "playwright test --config=playwright.simple.config.ts",
    "test:integration": "playwright test --project=integration-tests",
    "test:deployment": "playwright test --project=deployment-validation",
    "test:mobile": "playwright test --project=mobile-smoke",
    "test:all": "playwright test --project=smoke-tests-chromium --project=integration-tests --project=deployment-validation",
    "test:critical": "playwright test tests/smoke/ tests/deployment/",
    "test:ui": "playwright test --ui",
    "test:debug": "playwright test --debug",
    "test:report": "playwright show-report",
    "validate:env": "node -e \"require('./dist/lib/environment-validation').validateEnvironmentOnStartup()\"",
    "validate:env:full": "curl -s http://localhost:3000/api/environment/validate | jq .",
    "validate:health": "curl -s http://localhost:3000/api/health | jq .",
    "monitor:local": "open http://localhost:3000/monitoring",
    "setup:dev": "cp .env.example .env.local && echo 'Configure .env.local with your development settings'",
    "deploy:validate": "./scripts/deployment-validation.sh",
    "startup:validate": "node -e \"console.log('Environment validation would run here')\""
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@sentry/nextjs": "^10.1.0",
    "@tanstack/react-query": "^5.84.1",
    "@tanstack/react-query-devtools": "^5.84.1",
    "@types/algoliasearch": "^3.34.11",
    "algoliasearch": "^4.23.3",
    "date-fns": "^4.1.0",
    "firebase": "^10.14.1",
    "framer-motion": "^12.23.12",
    "lucide-react": "^0.536.0",
    "next": "^14.0.0",
    "next-intl": "^4.3.4",
    "next-seo": "^6.8.0",
    "pino": "^9.7.0",
    "pino-pretty": "^13.1.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hot-toast": "^2.5.2",
    "react-instantsearch": "^7.15.0",
    "shopify-buy": "^3.0.7",
    "swr": "^2.3.4",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.54.2",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/shopify-buy": "^3.0.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^8.55.0",
    "eslint-config-next": "^14.0.0",
    "playwright": "^1.54.2",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.3.0"
  }
}

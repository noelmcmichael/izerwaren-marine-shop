{
  "name": "izerwaren-revival-2.0",
  "version": "1.0.0",
  "description": "Headless Shopify B2B e-commerce platform for Izerwaren",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "packageManager": "npm@10.2.4",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "start": "turbo run start",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint:fix",
    "lint:check": "eslint . --ext .ts,.tsx,.js,.jsx",
    "lint:fix-all": "eslint . --ext .ts,.tsx,.js,.jsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "turbo run type-check",
    "quality:check": "npm run lint:check && npm run format:check && npm run type-check",
    "quality:fix": "npm run lint:fix-all && npm run format",
    "test": "turbo run test",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "frontend:dev": "turbo run dev --filter=@izerwaren/frontend",
    "backend:dev": "turbo run dev --filter=@izerwaren/backend",
    "db:generate": "turbo run generate --filter=@izerwaren/database",
    "db:push": "turbo run push --filter=@izerwaren/database",
    "db:migrate": "turbo run migrate --filter=@izerwaren/database",
    "db:seed": "turbo run seed --filter=@izerwaren/database",
    "db:status": "tsx scripts/check-db-state.ts",
    "import:production": "tsx scripts/production-import.ts start",
    "import:production:force": "tsx scripts/production-import.ts start --force",
    "import:status": "tsx scripts/production-import.ts status",
    "import:monitor": "tsx scripts/production-import.ts monitor",
    "import:resume": "tsx scripts/production-import.ts resume",
    "import:report": "tsx scripts/production-import.ts report",
    "import:validate": "tsx scripts/production-import.ts validate",
    "import:test": "tsx scripts/production-import.ts start --batch-size 10 --force --skip-images",
    "import:test-system": "tsx scripts/test-production-import.ts",
    "import:complete-variants": "tsx scripts/complete-variant-generation.ts",
    "import:final-report": "tsx scripts/final-import-report.ts",
    "import:media-assets": "tsx scripts/media-assets-importer.ts",
    "import:image-galleries": "tsx scripts/complete-image-galleries-importer.ts",
    "media:check": "tsx scripts/check-media-assets.ts",
    "project:status": "tsx scripts/final-project-status.ts",
    "db:audit-performance": "tsx scripts/database-performance-audit.ts",
    "test:shopify": "tsx scripts/test-enhanced-cart.ts",
    "test:webhooks": "tsx scripts/test-webhook-endpoints.ts",
    "test:integration": "tsx scripts/test-complete-integration.ts",
    "validate:shopify": "tsx scripts/validate-shopify-integration.ts",
    "prepare": "husky",
    "validate:setup": "node scripts/validate-setup.js",
    "validate:env": "node scripts/validate-setup.js",
    "docker:start": "./scripts/docker-dev.sh start",
    "docker:stop": "./scripts/docker-dev.sh stop",
    "docker:restart": "./scripts/docker-dev.sh restart",
    "docker:status": "./scripts/docker-dev.sh status",
    "docker:logs": "./scripts/docker-dev.sh logs",
    "docker:build": "./scripts/docker-dev.sh build",
    "docker:clean": "./scripts/docker-dev.sh clean",
    "docker:health": "./scripts/docker-dev.sh health",
    "docker:dev": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:prod": "docker-compose -f docker-compose.yml -f docker-compose.prod.yml up -d",
    "ci:test": "docker-compose -f docker-compose.yml -f docker-compose.ci.yml up -d && npm run test && docker-compose down",
    "ci:quality": "npm run quality:check",
    "ci:build": "npm run build && docker-compose -f docker-compose.yml -f docker-compose.ci.yml build",
    "ci:security": "npm audit --audit-level high",
    "shopify:setup": "tsx scripts/setup-shopify-store.ts",
    "shopify:migrate": "tsx scripts/shopify-migration.ts start",
    "shopify:migrate:dry-run": "tsx scripts/shopify-migration.ts start --dry-run",
    "shopify:status": "tsx scripts/shopify-migration.ts status",
    "shopify:validate": "tsx scripts/shopify-migration.ts validate",
    "shopify:report": "tsx scripts/shopify-migration.ts report",
    "shopify:test": "tsx scripts/shopify-migration.ts start --dry-run --batch-size 5 --validate-only",
    "shopify:fix-pricing": "tsx scripts/fix-product-pricing.ts",
    "shopify:fix-pricing:dry-run": "tsx scripts/fix-product-pricing.ts --dry-run",
    "shopify:fix-pricing:all": "tsx scripts/fix-product-pricing.ts --batch-size 1000"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "@prisma/client": "^5.7.0",
    "@shopify/admin-api-client": "^0.2.0",
    "@shopify/shopify-api": "^8.1.0",
    "@types/pg": "^8.15.5",
    "bull": "^4.16.5",
    "commander": "^14.0.0",
    "dotenv": "^17.2.1",
    "firebase": "^10.7.0",
    "firebase-admin": "^13.4.0",
    "graphql": "^16.8.0",
    "inquirer": "^12.9.0",
    "next": "^14.0.0",
    "next-auth": "^4.24.0",
    "node-cron": "^4.2.1",
    "pg": "^8.16.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "sharp": "^0.34.3",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.0",
    "@testing-library/react": "^14.1.0",
    "@types/axios": "^0.9.36",
    "@types/inquirer": "^9.0.8",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "autoprefixer": "^10.4.21",
    "axios": "^1.11.0",
    "eslint": "^8.55.0",
    "eslint-config-next": "^14.0.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.3",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^16.1.2",
    "playwright": "^1.54.2",
    "postcss": "^8.5.6",
    "prettier": "^3.1.0",
    "prisma": "^5.7.0",
    "puppeteer": "^24.15.0",
    "tailwindcss": "^3.4.17",
    "tsx": "^4.20.3",
    "turbo": "^2.5.5",
    "typescript": "^5.3.0"
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "shopify",
    "b2b",
    "ecommerce",
    "nextjs",
    "typescript"
  ],
  "author": "Izerwaren Team",
  "license": "UNLICENSED"
}
